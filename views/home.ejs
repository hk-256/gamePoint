<% layout("layouts/BoilerPlate") %>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sport Centers</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    .card {
      margin-bottom: 20px;
    }

    .card-header {
      background-color: #007bff;
      color: white;
      font-size: 1.25rem;
    }

    .card-body p {
      margin-bottom: 0.5rem;
    }

    .card-footer {
      font-size: 0.875rem;
      color: #6c757d;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Sport Centers</h2>

    <div class="row">
    

      <!-- Sport Center 3 -->
       <% for(let center of centers){ %>
        <a href="/sportsCenter/<%=center._id%>" class="col-md-6 text-decoration-none"">
            <div class="card">
            <div class="card-header">
                <%= center.name %>
            </div>
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text"><%= center.description %></p>
                <!-- <p><strong>Owner:</strong> Alice Johnson</p> -->
                <p><strong>Location:</strong> <%= center.location %></p>
            </div>
            <!-- <div class="card-footer">
                <small class="text-muted">Last updated 5 days ago</small>
            </div> -->
            </div>
        </a>
        <% } %>

      
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
