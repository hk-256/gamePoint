<% layout("layouts/BoilerPlate") %>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Sport</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    body {
      background-color: #f8f9fa;
    }

    .form-container {
      background-color: #ffffff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      margin: 50px auto;
    }

    .form-title {
      text-align: center;
      margin-bottom: 30px;
      font-size: 1.8rem;
      font-weight: bold;
      color: #007bff;
    }

    .form-group label {
      font-weight: bold;
    }

    .form-control {
      border-radius: 8px;
    }

    .btn-primary {
      background: linear-gradient(135deg, #007bff, #00c6ff);
      border: none;
      border-radius: 8px;
      padding: 10px 20px;
      font-size: 1.1rem;
      transition: background 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #0056b3, #00a2ff);
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="form-container">
      <h2 class="form-title">Add New Sport</h2>
      <form action="/<%=id%>/createSport" method="POST">
        <!-- Sport Name -->
        <div class="form-group mb-3">
          <label for="sportName">Sport Name</label>
          <input type="text" class="form-control" id="sportName" name="game[sportsName]" placeholder="Enter sport name" required>
        </div>

        <!-- Sport Description -->
        <div class="form-group mb-3">
          <label for="sportDescription">Description</label>
          <textarea class="form-control" id="sportDescription" name="game[description]" rows="4" placeholder="Enter sport description" required></textarea>
        </div>

        <!-- Number of Courts -->
        <div class="form-group mb-3">
          <label for="numberOfCourts">Number of Courts</label>
          <input type="number" class="form-control" id="numberOfCourts" name="count" min="1" placeholder="Enter number of courts" required>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Add Sport</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
