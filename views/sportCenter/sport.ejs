<% layout("layouts/BoilerPlate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Court Availability</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    .table thead th {
      text-align: center;
      vertical-align: middle;
    }

    .table tbody td {
      text-align: center;
      vertical-align: middle;
    }

    .available {
      background-color: #d4edda;
      color: #155724;
    }

    .unavailable {
      background-color: #f8d7da;
      color: #721c24;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Court Availability</h2>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Time</th>
            <!-- Loop through courts and create headers dynamically -->
            <% for (let i = 1; i <= courts; i++) { %>
              <th scope="col">Court <%= i %></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <!-- Loop through time slots from 6 to 23 -->
          <% for (let hour = 6; hour <= 23; hour++) { %>
            <tr>
              <td><%= hour %>:00</td>
              <!-- Loop through each court to show availability -->
              <% for (let court = 1; court <= courts; court++) { %>
                <% if (availability[hour] && availability[hour][court]) { %>
                  <!-- If court is available -->
                  <td class="available">Available</td>
                <% } else { %>
                  <!-- If court is unavailable -->
                  <td class="unavailable">Unavailable</td>
                <% } %>
              <% } %>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
