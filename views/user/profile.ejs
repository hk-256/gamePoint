<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    body {
      background-color: #f8f9fa;
    }

    .profile-card {
      background-color: #ffffff;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
    }

    .profile-card img {
      border-radius: 50%;
      width: 150px;
      height: 150px;
      object-fit: cover;
    }

    .profile-card h2 {
      font-size: 1.75rem;
      margin-top: 15px;
    }

    .profile-card p {
      font-size: 1rem;
      margin-bottom: 10px;
      color: #6c757d;
    }

    .list-group-item {
      border: none;
      padding: 15px;
      background-color: #f8f9fa;
      font-size: 1.1rem;
    }

    .list-group-item:hover {
      background-color: #e9ecef;
    }

    .btn-primary {
      background: linear-gradient(135deg, #007bff, #00c6ff);
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      font-size: 1.1rem;
      margin-top: 20px;
      transition: background 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #0056b3, #00a2ff);
    }

    .section-title {
      margin-top: 20px;
      font-size: 1.5rem;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      <!-- Left Side: Profile Info -->
      <div class="col-md-4">
        <!-- Profile Card -->
        <div class="profile-card mx-5">
          <h2><%= user.username %></h2>
          <p><%= user.email %></p>
          <p><%= user.phoneNumber %></p>
        </div>
      </div>

      <!-- Right Side: Sports Centers and Bookings -->
      <div class="col-md-8">
        <!-- Sports Centers -->
         <% if(centers.length>0){ %>
          <h2 class="mb-4">Your Sports Centers</h2>
          <ul class="list-group">
            <% for (let sportsCenter of centers) { %>
              <a href="/sportsCenter/<%= sportsCenter._id%>" class="text-decoration-none">
                <li class="list-group-item" >
                  <%= sportsCenter.name %>
                </li>
              </a>
            <% } %>
          </ul>
          <hr>
        <% } %>

        <!-- Bookings -->
       

<div class="container mt-5">
  <h2 class="mb-4">Your Sports Bookings</h2>
  <div class="row">
      <!-- Sample data for demonstration -->
       <% for(let booking of books){ %>
          <div class="col-md-4">
              <div class="card">
                  <div class="card-header">
                      <h5 class="mb-0"><%=booking.sportName%></h5>
                  </div>
                  <div class="card-body">
                      <p><strong>Court Number:</strong> <%= booking.courtNumber %></p>
                      <p><strong>Slot:</strong> <%= booking.slot %></p>
                      <p><strong>Center Name:</strong> <%= booking.centerName %></p>
                  </div>
              </div>
          </div>
      <% } %>
